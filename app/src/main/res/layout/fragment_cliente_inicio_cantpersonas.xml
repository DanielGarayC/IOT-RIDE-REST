<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Adultos -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Adultos"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/btnMinusAdultos" />


        <Button android:id="@+id/btnMinusAdultos"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            app:icon="@drawable/baseline_remove_24"/>

        <TextView android:id="@+id/tvAdultos"
            android:layout_marginHorizontal="20dp"
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button android:id="@+id/btnPlusAdultos"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            app:icon="@drawable/baseline_add_24"/>

    </LinearLayout>

    <!-- Ni침os -->

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginRight="24dp"
            android:text="Ni침os\n(0 a 13 a침os)"
            android:textStyle="bold" />

        <Button android:id="@+id/btnMinusNinos"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            app:icon="@drawable/baseline_remove_24"/>

        <TextView android:id="@+id/tvNinos"
            android:layout_marginHorizontal="20dp"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnPlusNinos"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            app:icon="@drawable/baseline_add_24" />
    </LinearLayout>

    <!-- Bot칩n aplicar -->
    <Button
        android:id="@+id/btnAplicar"
        android:text="Aplicar"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
